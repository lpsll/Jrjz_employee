<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/navi</item>
        <item name="colorPrimaryDark">@color/navi</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageTranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>
    <!-- 带有遮罩层的Dialog Loading效果 -->
    <style name="CommonLoadingShadeDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AnimBottomPopwindow" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- ==========我是华丽丽的分割线==================== ;-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:maxLines">1</item>
        <!--此处是获取了屏幕的最大宽度-->
        <item name="tabMaxWidth">400dp</item>
        <item name="tabIndicatorColor">@color/btn_blue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@android:color/white</item>
        <item name="tabSelectedTextColor">@color/btn_blue_dark</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/fs_50</item>
        <item name="android:textColor">@color/tv_black</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--点击按钮的样式-->
    <style name="button_click">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ds_130</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/ds_50</item>
        <item name="android:layout_marginRight">@dimen/ds_50</item>
        <item name="android:layout_marginTop">@dimen/ds_350</item>
        <item name="android:background">@drawable/ok_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/ds_5</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/fs_50</item>
    </style>


    <!--订单页字体-->
    <style name="textview_order">
        <item name="android:padding">@dimen/ds_8</item>
        <item name="android:textSize">@dimen/fs_45</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tv_black</item>
    </style>




</resources>
